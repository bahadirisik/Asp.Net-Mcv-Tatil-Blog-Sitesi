@using TatilSitesi.Models.Siniflar
@model List<Blog>

@foreach (var blog in Model)
{
    <div class="right">
        <div class="bot-left">
            <img src="@blog.BlogImage" alt="" />

        </div>
        <div class="left-text">
            <h4>@blog.Baslik</h4>
            <span class="doller">@blog.Tarih</span>
            <p>@blog.Aciklama</p>
            <p><a href="~/Blog/BlogDetay/@blog.ID"></a><span class="read">Devamını Oku</span></p>

        </div>
    </div>
}
